{
  "manifest_version": 3,
  "name": "Twitter Bookmark Sync",
  "version": "1.0",
  "description": "Twitter'dan tek tıkla yer imlerini web uygulamasına senkronize eder.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "https://environmentalistzero.github.io/*",
    "*://api.vxtwitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["twitter-content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://environmentalistzero.github.io/*"], 
      "js": ["webapp-sync.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Twitter Bookmark"
  }
}